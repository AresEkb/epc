Model "Test model" {
    Description "тестовый процесс в нотации «Событийная цепочка процессов» (Event-driven Process Chain, EPC)"

    OrganizationUnit "заказчик"
    OrganizationUnit "аналитик"
    OrganizationUnit "методолог"
    OrganizationUnit "специалист по моделированию"
    OrganizationUnit "руководитель проекта"

    Participation "заказчик" performs "оценивает результат"
    Participation "заказчик" "подводит итоги испытаний"
    Participation "заказчик" controls "разрабатывает инструментарий"
    Participation "аналитик" performs "анализирует требования"
    Participation "методолог" performs "выбирает подходящую метамодель"
    Participation "методолог" supports "принимает решение об использовании метамодели"
    Participation "специалист по моделированию" performs "разрабатывает инструментарий"
    Participation "специалист по моделированию" performs "принимает решение об использовании метамодели"
    Participation "руководитель проекта" performs "демонстрирует результат"
    Participation "руководитель проекта" supports "подводит итоги испытаний"

    Event "поступил заказ на автоматизацию разработки"
    Xor "поступил заказ на автоматизацию разработки" "требования уточнены" -> "анализирует требования"
    Function "анализирует требования"
    ControlFlow "анализирует требования" "требования проанализированы"
    Event "требования проанализированы"
    ControlFlow "требования проанализированы" "выбирает подходящую метамодель"
    Function "выбирает подходящую метамодель"
    Or "выбирает подходящую метамодель" -> "метамодель выбрана" "требуемой метамодели нет"
    Event "метамодель выбрана"
    Event "требуемой метамодели нет"
    ControlFlow "требуемой метамодели нет" "разрабатывает метамодель"
    Function "разрабатывает метамодель"
    ControlFlow "разрабатывает метамодель" "метамодель разработана"
    Event "метамодель разработана"
    Or "метамодель выбрана" "метамодель разработана" -> "принимает решение об использовании метамодели"
    Function "принимает решение об использовании метамодели"
    ControlFlow "принимает решение об использовании метамодели" "разрабатывает инструментарий"
    Function "разрабатывает инструментарий"
    ControlFlow "разрабатывает инструментарий" "разработка инструмента автоматизации завершена"
    Event "разработка инструмента автоматизации завершена"
    And "разработка инструмента автоматизации завершена" -> "демонстрирует результат" "оценивает результат"
    Function "демонстрирует результат"
    Function "оценивает результат"
    And "демонстрирует результат" "оценивает результат" -> "подводит итоги испытаний"
    Function "подводит итоги испытаний"
    Xor "подводит итоги испытаний" -> "требования уточнены" "заказ выполнен"
    Event "требования уточнены"
    Event "заказ выполнен"

    System "инструмент для автоматизации разработки"

    PaperDocument "техническое задание"
    Information "примеры входных и выходных артефактов"
    DataBase "репозиторий метамоделей"
    Information "метамодель"

    InformationFlow "анализирует требования" outputs "примеры входных и выходных артефактов"
    InformationFlow "примеры входных и выходных артефактов" inputFor "выбирает подходящую метамодель"
    InformationFlow "репозиторий метамоделей" usedBy "выбирает подходящую метамодель"
    InformationFlow "репозиторий метамоделей" inputFor "принимает решение об использовании метамодели"
    InformationFlow "разрабатывает метамодель" creates "метамодель"
    InformationFlow "метамодель" inputFor "принимает решение об использовании метамодели"

    Association "поступил заказ на автоматизацию разработки" "техническое задание"
    Association "разрабатывает инструментарий" "инструмент для автоматизации разработки"
    Association "инструмент для автоматизации разработки" "демонстрирует результат"
}
